<Window x:Class="WpfApp_REFASH.CollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_REFASH"
        mc:Ignorable="d"
        Title="CollectionWindow" Height="720" Width="1280"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <local:SideBar Grid.Column="0"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Upper Bar -->
            <Grid Grid.Row="0" Background="#000000" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <local:UpperBar Grid.Column="0"/>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <StackPanel Margin="10">
                    <!-- Total Collection Section -->
                    <Border BorderBrush="#000000" BorderThickness="1" Margin="10" CornerRadius="5" HorizontalAlignment="Stretch" Height="80">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Total Collection" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="22" Margin="20,0,0,0"/>
                            <Label Content="10" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="30" Grid.Column="1" Margin="0,0,20,0"/>
                        </Grid>
                    </Border>

                    <!-- Collection List -->
                    <ListView ItemsSource="{Binding Collections}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <!-- Set margin for spacing between items -->
                                <local:CollectionControl Title="{Binding Title}" URL="{Binding URL}" Margin="0,10,70,50"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>


                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
