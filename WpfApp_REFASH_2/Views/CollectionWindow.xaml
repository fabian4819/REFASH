<Window x:Class="WpfApp_REFASH.CollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_REFASH"
        mc:Ignorable="d"
        Title="CollectionWindow" Height="720" Width="1280"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized">
    <Grid>
        <!-- Sidebar -->
        <StackPanel Background="#000000" Grid.Column="0" Height="720" Margin="0,0,1088,0">
            <Image Source="/Assets/Logo.png"/>
            <Border Background="#323232" Margin="10" CornerRadius="10">
                <Label Foreground="White" FontSize="24" Content="News" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="57"/>
            </Border>
            <Border Background="#636363" Margin="10" CornerRadius="10">
                <Label Foreground="White" FontSize="24" Content="Collection" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="57"/>
            </Border>
            <Border Background="#323232" Margin="10" CornerRadius="10">
                <Label Foreground="White" FontSize="24" Content="Shop" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="57"/>
            </Border>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Margin="192,0,0,-16">
            <!-- Define Rows: Header and Content Area -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Buttons, Background Black -->
            <Grid Grid.Row="0" Background="#000000" HorizontalAlignment="Stretch" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Buttons on the Right Side -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                    <Button Content="-" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="24" Width="72"/>
                    <Button Content="X" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="24" Width="72"/>
                </StackPanel>
            </Grid>

            <!-- Main Content Area with NewsCard -->
            <StackPanel Grid.Row="1" Margin="10">
                <Border BorderBrush="#000000" BorderThickness="1" Margin="10" CornerRadius="5" Width="1046" Height="80">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Total Collection" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="22" Margin="20,0,0,0"/>
                        <Label Content="10" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="30" Grid.Column="1" Margin="0,0,20,0"/>
                    </Grid>
                </Border>
                <!--Collection List-->
                <ListView ItemsSource="{Binding Collections}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:CollectionControl Title="{Binding Title}" URL="{Binding URL}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
