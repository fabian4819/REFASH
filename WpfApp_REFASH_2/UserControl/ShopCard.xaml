<UserControl x:Class="WpfApp_REFASH.ShopCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_REFASH"
             mc:Ignorable="d" 
             Height="400" Width="300">
    <Border Background="White" BorderBrush="White" BorderThickness="4" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>
        </Border.Effect>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Stretch">
                <!-- Image binding with path -->
                <Image Source="{Binding Image}" Stretch="UniformToFill" Width="240" Height="200"/>
                <Label Content="{Binding ProductName}" FontSize="16" FontWeight="Bold" Margin="12,0,12,0"/>
                <TextBlock Text="{Binding Price}" FontSize="12" FontWeight="Medium" Margin="12,0,12,0"/>
                <TextBlock Text="{Binding Description}" FontSize="12" TextWrapping="Wrap" Margin="12,0,12,0"/>
            </StackPanel>

            <Button Content="Add to Cart" FontWeight="DemiBold" Foreground="White" Background="Black" BorderBrush="Transparent" 
                    Grid.Row="1" Margin="0,0,0,12" Height="Auto" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</UserControl>
